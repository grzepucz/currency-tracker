<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="pl.edu.agh.currencytrack.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="pl.edu.agh.currencytrack.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_exchange" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="pl.edu.agh.currencytrack.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_favourites_list"
        android:name="pl.edu.agh.currencytrack.ui.favourites.FavouriteItemFragment"
        android:label="@string/title_favourites"
        tools:layout="@layout/fragment_favourite_item_list" />

    <action android:id="@+id/action_global_navigation_notifications" app:destination="@id/navigation_notifications" />
</navigation>