<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectToCurrencyActivity">

    <Button
        android:id="@+id/resign"
        android:layout_width="407dp"
        android:layout_height="108dp"
        android:text="@string/next_step"
        app:layout_constraintBottom_toTopOf="@+id/notificationCurrencySelectRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notificationCurrencySelectRecyclerView"
        android:layout_width="408dp"
        android:layout_height="607dp"
        android:layout_marginTop="3dp"
        android:clickable="true"
        android:padding="20dp"
        android:paddingTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resign"
        android:focusable="true">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>